{
  "name": "Buy with Shypmax",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*", "http://*.amazon.com/*", "https://amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Buy with shypmax"
  },
  "manifest_version": 2
}
